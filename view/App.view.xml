<mvc:View
	controllerName="main.namespace.controller.App"
	xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:me="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc">
	<Button
		text="{i18n>showHelloButtonText}"
		press="onShowHello"/>
  <Button
    text="{i18n>showHelloButtonFull}"
    press="onShowHelloFull"/>
	<Button
		text="{i18n>showHelloAdd}"
		press="noShowAdd"/>


    <Input
      value="{/recipient/name}"
      description="Hello {/recipient/name}"
      valueLiveUpdate="true"
      width="70%"/>

    <l:VerticalLayout class="sapUiSmallMargin">
        <l:HorizontalLayout>
            <RadioButton text="One Week"  select="changeToOneWeek"  groupName="rangeGroup"/>
            <RadioButton text="Two Weeks" select="changeToTwoWeeks" groupName="rangeGroup"/>
            <RadioButton text="One Month" select="changeToOneMonth" groupName="rangeGroup" selected="true"/>
            <RadioButton text="Two Months" select="changeToTwoMonths" groupName="rangeGroup"/>
        </l:HorizontalLayout>
        <me:Calendar id="durationCalendar" width="640px" />
    </l:VerticalLayout>


</mvc:View>
